{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jupyter-pyspark-notebook-app",
        "annotations": {
            "description": "Jupyter (pyspark-notebook).",
            "iconClass": "instant-app",
            "tags": "instant-app"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "notebook-app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "notebook-app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${REPOSITORY_URL}"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "jupyter-pyspark-notebook-image:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "notebook-app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "containerNames": [
                                "${APPLICATION_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "notebook-app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "notebook-app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "${APPLICATION_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 8888,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "PASSWORD",
                                        "value": "${USER_PASSWORD}"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "notebook-app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8888-tcp",
                        "protocol": "TCP",
                        "port": 8888,
                        "targetPort": 8888
                    }
                ],
                "selector": {
                    "notebook-app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "notebook-app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "host": "${ROUTE_HOSTNAME}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}"
                },
                "port": {
                    "targetPort": "8888-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "displayName": "Name",
            "description": "Identifies the resources created for this application.",
            "required": true
        },
        {
            "name": "REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "description": "Repository for your Jupyter Notebooks and data.",
            "required": true
        },
        {
            "name": "USER_PASSWORD",
            "displayName": "User Password",
            "description": "User password for accessing Jupyter Notebook.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{8}",
            "required": true
        },
        {
            "name": "ROUTE_HOSTNAME",
            "displayName": "Hostname",
            "description": "Public hostname for the route. If not specified, a hostname is generated."
        }
    ]
}
